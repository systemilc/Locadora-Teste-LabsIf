{
    "openapi": "3.1.0",
    "info":{
        "title": "API Locadora automotiva",
        "description": "Essa API foi desenvolvida como base de testes técnico. Tem como objetivo a manupulação de dados para locadoras de veículos.",
        "contact":{
            "email": "isaac.systemilc@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers":[
        {
            "url": "http://localhost:3000",
            "description": "API de test"
        }
    ],
    "paths": {
        "/carros":{
            "post":{
                "summary": "Cadastro de veículos",
                "description": "Essa rota será responsável por cadastrar um novo veículo",
                "tag": ["veiculo"],
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref": "#/components/schemas/carros"
                            },
                            "example":{
                                "carros":{
                                    "values":{
                                        "modelo": "Toyota Corolla",
                                        "marca": "Toyota",
                                        "descricao": "Um sedã popular com bom consumo de combustível.",
                                        "preco_aluguel": 14829000,
                                        "categoria": "Sedã",
                                        "disponivel": true
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description": "Novo carro criado com sucesso",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type":"object",
                                    "$ref":"#/components/schemas/carros"
                                }
                            }
                        }
                    },
                    "400":{
                        "description": "É necessário informar todos os campos para criar ou atualizar um veículo."
                    },
                    "500":{
                        "description": "Erro interno do servidor"
                    }
                }
            }
        }
    },
    "components":{
        "schemas":{
            "carros":{
                "type": "object",
                "properties":{
                    "modelo":{
                        "type": "string"
                    }, 
                    "marca":{
                        "type": "string"
                    },
                    "descricao":{
                        "type": "string"
                    },
                    "preco_aluguel":{
                        "type": "number"
                    },
                    "categoria":{
                        "type": "string"
                    },
                    "disponivel":{
                        "type": "boolean"
                    }
                }
            }
        }
    }
}